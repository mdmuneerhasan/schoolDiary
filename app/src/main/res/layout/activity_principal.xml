<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".dashboard.principal.PrincipalActivity"
    >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <android.support.v7.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/toolbar"
                />

            <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Teacher Request"
            android:layout_margin="@dimen/small_margin"
            android:onClick="TeacherRequest"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Notice Broadcast"
            android:layout_margin="@dimen/small_margin"
            android:onClick="notice"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Manage Staff"
            android:layout_margin="@dimen/small_margin"
            />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="A Principal/Hod account have control over class as teacher "
                    android:textAlignment="center"
                    android:layout_marginTop="@dimen/small_margin"
                    />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    >
                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Roll Attendance"
                            android:layout_margin="@dimen/small_margin"
                            android:onClick="Attendance"
                            />
                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Today's Attendance"
                            android:layout_margin="@dimen/small_margin"
                            android:onClick="attendanceToday"
                            />
                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="All day's attendance"
                            android:layout_margin="@dimen/small_margin"
                            android:onClick="AttendanceRegister"
                            />

                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Manage class"
                            android:layout_margin="@dimen/small_margin"
                            android:onClick="manageClass"
                            />
                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Student Request"
                            android:layout_margin="@dimen/small_margin"
                            android:onClick="TeacherRequest"
                            />
                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Guardian Request"
                            android:layout_margin="@dimen/small_margin"
                            android:onClick="guardianRequest"
                            />

                </LinearLayout>

        </LinearLayout>

</ScrollView>