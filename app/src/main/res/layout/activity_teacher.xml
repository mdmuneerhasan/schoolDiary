<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".teacher.TeacherActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Roll Attendance"
            android:layout_margin="@dimen/small_margin"
            android:onClick="Attendance"
            />


        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Attendance Register"
            android:layout_margin="@dimen/small_margin"
            android:onClick="AttendanceRegister"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Student Request"
            android:layout_margin="@dimen/small_margin"
            android:onClick="TeacherRequest"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Guardian Request"
            android:layout_margin="@dimen/small_margin"
            android:onClick="guardianRequest"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Manage class"
            android:layout_margin="@dimen/small_margin"
            android:onClick="manageClass"
            />

    </LinearLayout>
</ScrollView>