<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/app_bar_main"
    >
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/small_margin"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/loggedIn"
            />

        <ImageView
            android:layout_width="@dimen/button_size"
            android:layout_height="@dimen/button_size"
            android:layout_marginTop="@dimen/large_margin"
            android:layout_marginLeft="@dimen/large_margin"
            android:src="@drawable/ic_home_black_24dp"
            android:id="@+id/assignment"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Home"
            android:textAlignment="center"
            android:layout_alignEnd="@id/assignment"
            android:layout_alignStart="@id/assignment"
            android:layout_below="@id/assignment"
            android:textStyle="bold"
            android:textColor="@color/black"
            />
        <ImageView
            android:layout_width="@dimen/button_size"
            android:layout_height="@dimen/button_size"
            android:layout_marginRight="@dimen/large_margin"
            android:layout_marginTop="@dimen/large_margin"
            android:src="@drawable/ic_border_all_black_24dp"
            android:layout_alignParentRight="true"
            android:id="@+id/timeTable"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time Table"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_alignEnd="@id/timeTable"
            android:layout_alignStart="@id/timeTable"
            android:layout_below="@id/timeTable"
            />
        <ImageView
            android:layout_width="@dimen/button_size"
            android:layout_height="@dimen/button_size"
            android:layout_marginTop="@dimen/large_margin"
            android:layout_marginLeft="@dimen/large_margin"
            android:src="@drawable/ic_subtitles_black_24dp"
            android:id="@+id/notice"
            android:layout_below="@id/assignment"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Notice Board"
            android:textAlignment="center"
            android:layout_alignEnd="@id/assignment"
            android:layout_alignStart="@id/assignment"
            android:layout_below="@id/notice"
            android:textStyle="bold"
            android:textColor="@color/black"
            />
        <ImageView
            android:layout_width="@dimen/button_size"
            android:layout_height="@dimen/button_size"
            android:layout_marginRight="@dimen/large_margin"
            android:layout_marginTop="@dimen/large_margin"
            android:src="@drawable/ic_trending_up_black_24dp"
            android:layout_alignParentRight="true"
            android:id="@+id/myPerformance"
            android:layout_below="@id/timeTable"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Performance"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_alignEnd="@id/timeTable"
            android:layout_alignStart="@id/timeTable"
            android:layout_below="@id/myPerformance"
            />
    </RelativeLayout>
</ScrollView>